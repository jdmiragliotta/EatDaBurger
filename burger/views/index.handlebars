<div class="container-fluid">
  <div>
    <h1>Eat Da Burger!</h1>
  </div>
  <div class= "row">
    <div class="col m6">
      Not Devoured
      {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="burgerBorder"> 
          <div>
            <div class="burger">{{this.id}}. {{this.burger_name}}</div>
          </div>
        </div>
        <div class="devourBtn">
          <form method="POST" action="/update?_method=POST">
            <input type="hidden" type="text" name="id" value={{this.id}}>
            <button type="submit" class="btn">Devour!</button>
          </form>
        </div>
        {{/unless}}
      {{/each}}
    </div>
    <div class="col m6">
      Devoured
      {{#each burger_data}}
        {{#if this.devoured}}
        <div class="burgerBorder">
          <div>
            <div class="burger">{{this.id}}. {{this.burger_name}}</div>
          </div>
        </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
  <div class=row>
    <div class="col m12">
      <form action="/create" method="POST">
        <input placeholder="Enter Burger Name" name="burger_name"></input><br>
        <button type="submit" id="addBurgerBtn" class="btn">Add A New Burger!</button>
      </form>
    </div>
  </div>
</div>




